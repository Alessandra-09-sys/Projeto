<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include("../partials/cabecalho.ejs", { title: "Lista de Usuarios" }) %>
</head>
<body>
    <div class="container-fluid mt-4">
        <h1 class="mb-4">Usuarios Existentes</h1>
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th colspan="3" class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                    <% for (const usuario of usuarios){%>
                        <tr>
                            <td><%= usuario.nome %></td>
                            <td><%= usuario.email %></td>
                            <td class="text-center">
                                <a href="/usuarios?acao=excluir&id=<%= usuario.id %>"
                                   class="btn btn-danger btn-sm"
                                   onclick="return confirm('Tem certeza que deseja excluir este usuario?')">Excluir</a>
                            </td>
                            <td class="text-center">
                                <a href="/usuarios/cadastrar/id=<%= usuario._id %>" class="btn btn-warning btn-sm">Atualizar</a>
                            </td>
                            <td class="text-center">
                               <a href="/usuarios/<%= usuario._id %>" class="btn btn-info btn-sm">Detalhar</a>
                            </td>
                        </tr>
                    <% }; %>

            </tbody>
        </table>
        <div class="mt-4">
            <a href="/usuarios/cadastrar" class="btn btn-primary">Novo Usuário</a>
            <a href="/" class="btn btn-info">Voltar</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
