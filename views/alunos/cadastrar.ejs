<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include("../partials/cabecalho.ejs") %>
</head>
<body>
    <div class="container-fluid mt-4">
        <h1 class="mb-4">Cadastro de Aluno</h1>
        <form action="/alunos/cadastrar" method="POST">
            <div class="mb-3">
                <label for="matricula" class="form-label">Matr√≠cula</label>
                <input type="text" id="matricula" name="matricula" class="form-control" value="<%= aluno.matricula %>">
            </div>
            <div class="mb-3">
                <label for="nome" class="form-label">Nome</label>
                <input type="text" id="nome" name="nome" class="form-control" value="<%= aluno.nome %>">
            </div>
            <div class="mb-3">
                <select name="disciplina" class="form-control">
                    <% disciplinas.forEach(function(disc) { %>
                        <option value="<%= disc._id %>"><%= disc.nome %></option>
                    <% }) %>
                </select>
            </div>
            <button type="submit" class="btn btn-success">Salvar</button>
        </form>

    </div>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
