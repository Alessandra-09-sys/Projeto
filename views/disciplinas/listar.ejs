<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include("../partials/cabecalho.ejs", { title: "Lista de Alunos Matriculados" }) %>
</head>
<body>
    <div class="container-fluid mt-4">
       <% disciplinas.forEach(function(disciplina) { %>
                <div class="card mb-4">
                    <div class="card-body">
                        <h4><%= disciplina.nome %> (Código: <%= disciplina.codigo %>)</h4>

                        <h6>Alunos Matriculados:</h6>
                        <ul>
                            <% disciplina.Alunos.forEach(function(aluno) { %>
                                <li><strong><%= aluno.nome %></strong> - Matrícula: <%= aluno.matricula %></li>
                            <% }) %>
                        </ul>

                        <a href="/disciplinas/cadastrar/<%= disciplina._id %>" class="btn btn-warning btn-sm">Editar</a>
                        <a href="/disciplinas?acao=excluir&id=<%= disciplina._id %>" class="btn btn-danger btn-sm">Excluir</a>
                    </div>
                </div>
        <% }) %>
        <div class="mt-4">
            <a href="/disciplinas/cadastrar" class="btn btn-primary">Cadastrar Nova Disciplina</a>
            <a href="/" class="btn btn-info">Voltar</a>
        </div>
    
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
